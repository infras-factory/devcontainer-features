{
  "name": "Riso Bootstrap",
  "id": "riso-bootstrap",
  "version": "1.1.10",
  "description": "Project initialization with basic setup",
  "options": {
    "projectName": {
      "type": "string",
      "default": "",
      "description": "Project name (auto-detect from workspace folder if empty)"
    },
    "enableSerena": {
      "type": "boolean",
      "default": false,
      "description": "Enable Serena coding agent toolkit for semantic code analysis"
    },
    "shellEnhancementLevel": {
      "type": "string",
      "default": "standard",
      "enum": [
        "minimal",
        "standard",
        "poweruser"
      ],
      "description": "Shell enhancement level - minimal: essential plugins only, standard: balanced features (recommended), poweruser: all features (may impact performance)"
    },
    "isTestMode": {
      "type": "boolean",
      "default": false,
      "description": "Internal flag for test mode (creates mock files for Serena)"
    }
  },
  "dependsOn": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "installZsh": true,
      "username": "vscode"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts",
      "nodeGypDependencies": true,
      "nvmInstallPath": "/usr/local/share/nvm"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "latest",
      "installTools": true,
      "toolsToInstall": "pre-commit"
    }
  },
  "mounts": [
    {
      "type": "bind",
      "source": "${localEnv:HOME}${localEnv:USERPROFILE}/.ssh",
      "target": "/home/vscode/.ssh"
    },
    {
      "type": "bind",
      "source": "${localEnv:HOME}${localEnv:USERPROFILE}/.gemini",
      "target": "/home/vscode/.gemini"
    },
    {
      "type": "bind",
      "source": "${localEnv:HOME}${localEnv:USERPROFILE}/.claude",
      "target": "/home/vscode/.claude"
    },
    {
      "type": "bind",
      "source": "${localEnv:HOME}${localEnv:USERPROFILE}/.claude.json",
      "target": "/home/vscode/.claude.json"
    },
    {
      "type": "bind",
      "source": "${localEnv:HOME}${localEnv:USERPROFILE}/.config/gh",
      "target": "/home/vscode/.config/gh"
    }
  ],
  "postAttachCommand": "/bin/bash /usr/local/share/riso-bootstrap/scripts/post-attach.sh",
  "postCreateCommand": "/bin/bash /usr/local/share/riso-bootstrap/scripts/post-create.sh",
  "postStartCommand": "/bin/bash /usr/local/share/riso-bootstrap/scripts/post-start.sh"
}
